# app/views/services/index.html.erb
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Serviços Disponíveis</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @services.each do |service| %>
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold"><%= service.title %></h2>
        <p class="text-gray-600"><%= service.category %></p>
        <p class="text-green-600 font-bold">R$ <%= number_with_precision(service.price, precision: 2) %></p>
        <%= link_to "Ver detalhes", service_path(service), class: "mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
