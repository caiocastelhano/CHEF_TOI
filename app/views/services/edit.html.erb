<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4 text-primary bg-info p-2 fw-bold text-center">Editar Serviço</h2>

      <%= form_with(model: @service, local: true, class: 'needs-validation', novalidate: true) do |form| %>
        <% if @service.errors.any? %>
          <div class="alert alert-danger">
            <h4>Erros encontrados</h4>
            <ul>
              <% @service.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-3 text-primary fw-bold">
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-3 text-primary fw-bold pb-2">
          <%= form.label :category %>
          <%= form.text_field :category, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-3 text-primary fw-bold pb-2">
          <%= form.label :price %>
          <%= form.number_field :price, class: 'form-control', step: 0.01, required: true %>
        </div>

        <div class="form-group mb-3 text-primary fw-bold pb-2">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control', rows: 4 %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit 'Atualizar Serviço', class: 'btn btn-primary fw-bold pb-2' %>
          <%= link_to 'Cancelar', service_path(@service), class: 'btn btn-secondary fw-bold' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
