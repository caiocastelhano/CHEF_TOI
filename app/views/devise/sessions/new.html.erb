<div class="form-container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
          <%= f.input :email,
              label: "Seu e-mail",
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" } %>
          <%= f.input :password,
              label: "Sua senha",
              required: false,
              input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label: "Lembrar meus dados" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <!-- BotÃ£o estilizado -->
      <%= f.button :submit, "Fazer login", class: "btn-submit" %>
      <%= link_to "Fazer cadastro", new_registration_path(resource_name), class: "btn btn-submit my-3" %>
    </div>
  <% end %>
