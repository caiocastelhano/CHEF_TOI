<div class="container mt-4">
  <h2 class="text-center mb-4">Reservar Servi√ßo: <%= @service.title %></h2>

  <%= form_with model: [@service, @booking], local: true do |f| %>
    <% if @booking.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @booking.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :date, "Data da Reserva", class: "form-label" %>
      <%= f.date_field :date, class: "form-control", required: true %>
    </div>

    <div class="text-center">
      <%= f.submit "Confirmar Reserva", class: "btn btn-success" %>
      <%= link_to "Cancelar", service_path(@service), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
