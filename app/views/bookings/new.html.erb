<div class="container mt-4">
  <h1 class="text-center mb-4">Nova Reserva</h1>

<div class="row justify-content-center">
  <div class="col-3">
  <%= simple_form_for [@service, @booking] do |f| %>
    <div class="form-inputs">
      <%= f.input :date,
                  as: :date,
                  html5: true,
                  label: 'Data da Reserva' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Confirmar Reserva", class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
  </div>

   <%# botão de voltar para página anterior %>
  <div class="text-center mt-4">
    <%= link_to 'Voltar', :back , class: 'btn btn-secondary' %>
  </div>
</div>
